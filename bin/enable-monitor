#! /bin/sh

BOARD_VENDOR=/sys/devices/virtual/dmi/id/board_vendor
# System76 laptop
if grep -qi SYSTEM76 ${BOARD_VENDOR}; then
  if xrandr -q | grep -qF 'DP-1-0 connected'; then
    xrandr --output DP-1-0 --mode 1920x1080 --left-of eDP1 --primary
    xrandr --output eDP1 --mode 1920x1080 --dpi 144
  else
    xrandr --output eDP1 --mode 1920x1080 \
      --dpi 144 --primary
  fi
# Thinkpad laptop
elif grep -qi LENOVO ${BOARD_VENDOR}; then
  if xrandr -q | grep -qF 'DP-2 connected'; then
    xrandr --output DP-2 --mode 1920x1080 \
      --left-of eDP-1 --mode 1920x1080 \
      --scale .75x.75 --dpi 144
  else
    xrandr --output eDP-1 --mode 1920x1080 \
      --dpi 144 --scale .75x.75 --primary
  fi
fi
